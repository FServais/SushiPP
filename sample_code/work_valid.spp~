$ simple if
if a 
	nori 25
;;

$ more elaborate if
if a < 2 || c + 3 
	do something
	a = a + 2
;;

$ if else
if a < 2 || c + 3 
	do something
	a = a + 2
else 
	something else_
;;

$ if elseif else
if a < 2 || c + 3 
	do something
	a = a + 2
elseif a < 145
	escape da thing
	nori (expre ss ss)
else 
	something else_
;;

